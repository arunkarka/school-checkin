<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".HomeActivity">
	
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:id="@+id/schname"
		android:text="@string/zphs_school"
		android:textSize="24sp"
		android:textStyle="bold"
		android:textColor="@color/colorPrimary"
		android:gravity="center_horizontal"
		android:layout_gravity="top" />
	<androidx.viewpager.widget.ViewPager
		android:id="@+id/view_pager"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		>
		
		<Button
			android:id="@+id/button2"
			android:text="Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</androidx.viewpager.widget.ViewPager>


	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="10sp"
		android:layout_marginLeft="10sp"
		android:rowCount="2"
		android:columnCount="2">


		<androidx.cardview.widget.CardView
			android:id="@+id/cincout"
			android:layout_gravity="fill"
			android:layout_rowWeight="1"
			android:layout_columnWeight="1"
			android:layout_margin="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="#fff"
			app:cardCornerRadius="10sp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="5dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/icon"
					android:src="@drawable/baseline_done_white_48dp"
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:layout_margin="10dp"
					android:layout_gravity="center"
					android:padding="10dp"
					android:background="@drawable/shape_primary"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/checkin_out"
					android:textSize="15sp"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textColor="#000" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/exam"
			android:layout_gravity="fill"
			android:layout_rowWeight="1"
			android:layout_columnWeight="1"
			android:layout_margin="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="#fff"
			app:cardCornerRadius="10sp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="5dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/icon2"
					android:src="@drawable/examicon"
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:layout_margin="10dp"
					android:layout_gravity="center"
					android:padding="10dp"
					android:background="@drawable/shape2" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/exam"
					android:textSize="15sp"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textColor="#000" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:id="@+id/results"
			android:layout_gravity="fill"
			android:layout_rowWeight="1"
			android:layout_columnWeight="1"
			android:layout_margin="10sp"
			android:layout_width="wrap_content"
			android:layout_height="28dp"
			app:cardBackgroundColor="#fff"
			app:cardCornerRadius="10sp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:padding="5dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/icon3"
					android:src="@drawable/resultsicon"
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:layout_margin="10dp"
					android:layout_gravity="center"
					android:padding="10dp"
					android:background="@drawable/shape3" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/results"
					android:textSize="15sp"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textColor="#000" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:id="@+id/contactus"
			android:layout_gravity="fill"
			android:layout_rowWeight="1"
			android:layout_columnWeight="1"
			android:layout_margin="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="#fff"
			app:cardCornerRadius="10sp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="5dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/icon4"
					android:src="@drawable/baseline_person_white_48dp"
					android:layout_height="50dp"
					android:layout_width="50dp"
					android:layout_margin="10dp"
					android:layout_gravity="center"
					android:padding="10dp"
					android:background="@drawable/shape4" />

				<TextView
					android:layout_width="102dp"
					android:layout_height="wrap_content"
					android:text="@string/contact_us"
					android:textSize="15sp"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:textColor="#000" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</GridLayout>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/contact_developer"
			android:gravity="center_horizontal"
			android:layout_gravity="bottom" />
		<TextView
			android:id="@+id/devmail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/developer_email"
			android:gravity="center_horizontal"
			android:textColor="@color/colorAccent"
			android:layout_marginBottom="10px"
			android:layout_gravity="bottom" />

	</LinearLayout>


</LinearLayout>